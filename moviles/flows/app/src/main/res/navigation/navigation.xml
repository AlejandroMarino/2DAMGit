    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/contentFragment">
    <fragment
        android:id="@+id/contentFragment"
        android:name="com.example.filmflows.ui.pantallas.content.ContentFragment"
        android:label="fragment_content"
        tools:layout="@layout/fragment_content" >
        <action
            android:id="@+id/action_contentFragment_to_actorsFragment"
            app:destination="@id/actorFragment" />
    </fragment>
    <fragment
        android:id="@+id/actorFragment"
        android:name="com.example.filmflows.ui.pantallas.actor.ActorFragment"
        android:label="fragment_actors"
        tools:layout="@layout/fragment_actor" />
</navigation>